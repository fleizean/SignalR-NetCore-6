@model SignalRWebUI.Dtos.MenuTableDtos.UpdateMenuTableDto
@{
    ViewData["Title"] = "UpdateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Menü Düzenleme Paneli</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Menü düzenleme işlemleri buradan gerçekleştirilir.</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="MenuTableID" />
                            <div class="form-group">
                                <label for="name">Menü Adı</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                            <div class="form-group">
                                <label for="status">Durum</label>
                                <select class="form-control" asp-for="Status" id="status">
                                    <option value="true">Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kaydet</button>
                            <a href="/MenuTable/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

