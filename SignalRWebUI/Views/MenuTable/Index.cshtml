@model List<SignalRWebUI.Dtos.MenuTableDtos.ResultMenuTableDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid">
    <h4 class="page-title">Masaler</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Masa Listesi</div>
                </div>
                <div class="card-body">
                    <div class="card-sub">
                        Masa işlemleri buradan gerçekleştirilir.
                    </div>
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Masa Adı</th>
                                <th scope="col">Durumu</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MenuTableID</td>
                                        <td>@item.Name</td>
                                        @if (item.Status == true)
                                        {
                                            <td style="color:green">Aktif</td>
                                        }
                                        else
                                        {
                                            <td style="color:red">Pasif</td>
                                        }
                                        <td><a href="/MenuTable/DeleteMenuTable/@item.MenuTableID" class="btn btn-outline-danger" onclick="return confirm('Gerçekten silmek istiyor musunuz?')">Sil</a></td>
                                        <td><a href="/MenuTable/UpdateMenuTable/@item.MenuTableID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" style="color: red; font-size:14px">Masa yok veya db bağlantısı reddedildi.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/MenuTable/CreateMenuTable" class="btn btn-outline-primary">Masa Ekle</a>
                </div>
            </div>
        </div>

    </div>
</div>