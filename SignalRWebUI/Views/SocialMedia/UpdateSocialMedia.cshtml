@model SignalRWebUI.Dtos.SocialMediaDtos.UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya Düzenleme Paneli</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sosyal Medya düzenleme işlemleri buradan gerçekleştirilir.</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="SocialMediaID" />
                            <div class="form-group">
                                <label for="socialmedia">Sosyal Medya</label>
                                <input type="text" class="form-control" asp-for="Title" id="socialmedia">
                            </div>
                            <div class="form-group">
                                <label for="icon">İkon</label>
                                <input type="text" class="form-control" asp-for="Icon" id="icon">
                            </div>
                            <div class="form-group">
                                <label for="url">Url</label>
                                <input type="text" class="form-control" asp-for="Url" id="url">
                            </div>
                            <div class="form-group">
                                <label for="socialmediastatus">Durum</label>
                                <select class="form-control" asp-for="Status" id="socialmediastatus">
                                    <option value="true">Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kaydet</button>
                            <a href="/SocialMedia/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

