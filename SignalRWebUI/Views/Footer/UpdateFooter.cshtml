@model SignalRWebUI.Dtos.FooterDtos.UpdateFooterDto
@{
    ViewData["Title"] = "UpdateFooter";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Altbilgi Düzenleme Paneli</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Altbilgi düzenleme işlemleri buradan gerçekleştirilir.</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="FooterID" />
                            <div class="form-group">
                                <label for="title">Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                           <div class="form-group">
                                <label for="description">Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description" id="description">
                            </div>
                            <div class="form-group">
                                <label for="openingdays">Açık Günler</label>
                                <input type="text" class="form-control" asp-for="OpeningDays" id="openingdays">
                            </div>
                            <div class="form-group">
                                <label for="openingtimes">Açık Saat Aralığı</label>
                                <input type="text" class="form-control" asp-for="OpeningTimes" id="openingtimes">
                            </div>
                            <div class="form-group">
                                <label for="status">Durum</label>
                                <select class="form-control" asp-for="Status" id="status">
                                    <option value="true">Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kaydet</button>
                            <a href="/Footer/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

