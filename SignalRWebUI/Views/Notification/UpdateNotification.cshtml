@model SignalRWebUI.Dtos.Notification.UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";

    Dictionary<string, string> categoryColors = new Dictionary<string, string>
{
        { "primary", "Primary" },
        { "warning", "Warning" },
        { "success", "Success" },
        { "danger", "Danger" },
        { "info", "Info" },
    };
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Notifikasyon Düzenleme Paneli</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Notifikasyon düzenleme işlemleri buradan gerçekleştirilir.</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="NotificationID" />
                            <div class="form-group">
                                <label for="type">Tür</label>
                                <select class="form-control" asp-for="Type" id="type">
                                    <option value="">Tür Seçin</option>
                                    @foreach (var type in categoryColors)
                                    {
                                        <option value="@type.Key">@type.Value</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description" id="description">
                            </div>
                            <div class="form-group">
                                <label for="date">Tarih</label>
                                <input type="datetime" class="form-control" asp-for="Date" id="date">
                            </div>
                            <div class="form-group">
                                <label for="icon">İkon</label>
                                <input type="text" class="form-control" asp-for="Icon" id="icon">
                            </div>
                            <div class="form-group">
                                <label for="status">Durum</label>
                                <select class="form-control" asp-for="Status" id="status">
                                    <option value="true">Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kaydet</button>
                            <a href="/Notification/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

