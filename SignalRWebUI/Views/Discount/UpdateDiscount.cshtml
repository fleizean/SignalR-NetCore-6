@model SignalRWebUI.Dtos.DiscountDtos.UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim Düzenleme Paneli</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İndirim düzenleme işlemleri buradan gerçekleştirilir.</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="DiscountID" />
                            <div class="form-group">
                                <label for="productid">Ürün</label>
                                <select class="form-control" asp-for="ProductID" id="productid">
                                    <option value="">Ürün Seçin</option>
                                    @foreach (var product in ViewBag.v1)
                                    {
                                        <option value="@product.ProductID">@product.ProductName</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="amount">Ürün İndirim Miktarı</label>
                                <input type="text" class="form-control" asp-for="Amount" id="amount">
                            </div>
                            <div class="form-group">
                                <label for="description">İndirim Açıklaması</label>
                                <input type="text" class="form-control" asp-for="Description" id="description">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Resim Url</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
                            </div>
                            <div class="form-group">
                                <label for="productstatus">Durum</label>
                                <select class="form-control" asp-for="Status" id="productstatus">
                                    <option value="true">Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kaydet</button>
                            <a href="/Discount/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                   
                </form>
            </div>
        </div>
    </div>
</div>

