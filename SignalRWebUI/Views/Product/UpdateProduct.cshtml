@model SignalRWebUI.Dtos.ProductDtos.UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün Düzenleme Paneli</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün düzenleme işlemleri buradan gerçekleştirilir.</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="ProductID" />
                            <div class="form-group">
                                <label for="productname">Ürün Adı</label>
                                <input type="text" class="form-control" asp-for="ProductName" id="productname">
                            </div>
                            <div class="form-group">
                                <label for="categoryid">Kategori</label>
                                <select class="form-control" asp-for="categoryID" id="categoryid">
                                    <option value="1">Kategori Seçin</option>
                                    @foreach (var category in ViewBag.v1)
                                    {
                                        <option value="@category.CategoryID">@category.CategoryName</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description" id="description">
                            </div>
                            <div class="form-group">
                                <label for="price">Fiyat</label>
                                <input type="text" class="form-control" asp-for="Price" id="price">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Resim Url</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
                            </div>
                            <div class="form-group">
                                <label for="productstatus">Durum</label>
                                <select class="form-control" asp-for="Status" id="productstatus">
                                    <option value="true">Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kaydet</button>
                            <a href="/Product/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

