@model SignalRWebUI.Dtos.BookingDtos.UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    var today = DateTime.Now.AddHours(1);
    var minDate = today.ToString("yyyy-MM-ddTHH:mm");
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon Düzenleme Paneli</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Rezervasyon düzenleme işlemleri buradan gerçekleştirilir.</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="BookingID" />
                            <div class="form-group">
                                <label for="name">Müşteri Adı</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input type="tel" minlength="10" maxlength="10" class="form-control" asp-for="Phone" id="phone">
                            </div>
                            <div class="form-group">
                                <label for="mail">Mail</label>
                                <input type="email" class="form-control" asp-for="Mail" id="mail">
                            </div>
                            <div class="form-group">
                                <label for="personcount">Rezerve Sayı</label>
                                <input type="number" class="form-control" asp-for="PersonCount" id="personcount">
                            </div>
                            <div class="form-group">
                                <label for="reservationdate">Rezervasyon Tarihi</label>
                                <input type="datetime-local" class="form-control" min="@minDate" asp-for="ReservationDate" id="reservationdate">
                            </div>
                            <div class="form-group">
                                <label for="status">Durum</label>
                                <select class="form-control" asp-for="Status" id="status">
                                    <option value="true">Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kaydet</button>
                            <a href="/Booking/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

