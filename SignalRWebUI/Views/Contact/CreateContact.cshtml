@model SignalRWebUI.Dtos.ContactDtos.CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Ekleme Paneli</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim ekleme işlemleri buradan gerçekleştirilir.</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="location">Konum</label>
                                <input type="text" class="form-control" asp-for="Location" id="location">
                            </div>
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input type="tel" minlength="10" maxlength="10" class="form-control" asp-for="Telephone" id="phone">
                            </div>
                            <div class="form-group">
                                <label for="mail">Mail</label>
                                <input type="email" class="form-control" asp-for="Mail" id="mail">
                            </div>
                            
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kaydet</button>
                            <a href="/Contact/" class="btn btn-danger">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

